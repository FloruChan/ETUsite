    function switchLanguage(lang) {
      // botÃµes
      document.getElementById('lang-pt').classList.remove('active');
      document.getElementById('lang-en').classList.remove('active');
      document.getElementById(`lang-${lang}`).classList.add('active');

      // textos
      document.getElementById('badge-text').textContent = translations[lang].badge;
      document.getElementById('nichos-title').textContent = translations[lang].nichosTitle;
      document.getElementById('nicho1').textContent = translations[lang].nicho1;
      document.getElementById('nicho2').textContent = translations[lang].nicho2;
      document.getElementById('nicho3').textContent = translations[lang].nicho3;

      document.getElementById('diferenciais-title').textContent = translations[lang].diferenciaisTitle;
      document.getElementById('dif1').textContent = translations[lang].dif1;
      document.getElementById('dif2').textContent = translations[lang].dif2;
      document.getElementById('dif3').textContent = translations[lang].dif3;
      document.getElementById('dif4').textContent = translations[lang].dif4;

      document.getElementById('parcerias-title').textContent = translations[lang].parceriasTitle;

      document.getElementById('pacotes-title').textContent = translations[lang].pacotesTitle;
      document.getElementById('pacote1-desc').innerHTML = translations[lang].pacote1Desc;
      document.getElementById('pacote1-btn').textContent = translations[lang].pacote1Btn;
      document.getElementById('sob-consulta').textContent = translations[lang].sobConsulta;
      document.getElementById('pacote2-desc').innerHTML = translations[lang].pacote2Desc;
      document.getElementById('pacote2-btn').textContent = translations[lang].pacote2Btn;

      document.getElementById('contacto-title').textContent = translations[lang].contactoTitle;
      document.getElementById('propostas-btn-text').textContent = translations[lang].propostasBtn;
      document.getElementById('footer-text').textContent = translations[lang].footer;

      // mails (por ID, sem drama)
      document.getElementById('mail-pacote-200').href = translations[lang].mails.pacote200;
      document.getElementById('mail-pacote-custom').href = translations[lang].mails.pacoteCustom;
      document.getElementById('mail-propostas').href = translations[lang].mails.propostas;

      // lang attr
      document.documentElement.lang = (lang === 'pt') ? 'pt' : 'en';
    }

    // opcional: garantir estado inicial consistente
    switchLanguage('pt');
  </script>

  <!-- Efeito sonoro -->
  <audio id="clickSound" src="https://cdn.pixabay.com/audio/2022/03/15/audio_3e5a4c1a21.mp3" preload="auto"></audio>
  <script>
    const clickSound = document.getElementById("clickSound");
    document.querySelectorAll("a").forEach(link => {
      link.addEventListener("click", () => {
        clickSound.currentTime = 0;
        clickSound.play().catch(() => {});
      });
    });
  </script>
